{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/jobs",
      "UpstreamPathTemplate": "/jobs",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "ServiceName": "JobPostingService"
    },
    {
      "DownstreamPathTemplate": "/api/jobs/{id}",
      "UpstreamPathTemplate": "/jobs/{id}",
      "UpstreamHttpMethod": [ "GET", "PUT" ],
      "ServiceName": "JobPostingService"
    },
    {
      "DownstreamPathTemplate": "/api/jobs/search",
      "UpstreamPathTemplate": "/jobs/search",
      "UpstreamHttpMethod": [ "POST" ],
      "ServiceName": "JobPostingService"
    },
    {
      "DownstreamPathTemplate": "/api/jobs/create-mock",
      "UpstreamPathTemplate": "/jobs/create-mock",
      "UpstreamHttpMethod": [ "POST" ],
      "ServiceName": "JobPostingService"
    },
    {
      "DownstreamPathTemplate": "/api/hate-words",
      "UpstreamPathTemplate": "/hate-words",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "ServiceName": "JobPostingService"
    }
  ],
  "GlobalConfiguration": {
    "DownstreamScheme": "http",
    "ServiceDiscoveryProvider": {
      "Type": "Static",
      "Services": {
        "JobPostingService": {
          "Host": "${Services.JobPostingService.Host}",
          "Port": "${Services.JobPostingService.Port}"
        }
      }
    }
  }
} 